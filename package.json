{
  "name": "@vtaits/use-lazy-ref",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/use-lazy-ref.umd.cjs",
  "module": "./dist/use-lazy-ref.js",
  "exports": {
    ".": {
      "import": "./dist/use-lazy-ref.js",
      "require": "./dist/use-lazy-ref.umd.cjs"
    }
  },
  "typings": "dist/ts/index.d.ts",
  "scripts": {
    "build:ts": "tsc -p ./tsconfig.build.json",
    "build:js": "vite build",
    "build": "yarn build:js && yarn build:ts",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run --coverage.enabled --coverage.all --coverage.include=src",
    "test:unit:watch": "vitest",
    "lint": "biome check src",
    "lint:fix": "biome check src --apply-unsafe",
    "format": "biome format src --write",
    "test": "yarn lint && yarn test:ts && yarn test:unit",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.3",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "@vitejs/plugin-react": "^2.1.0",
    "@vitest/coverage-v8": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "vitest": "^1.4.0"
  },
  "repository": "git@github.com:vtaits/use-lazy-ref.git",
  "homepage": "https://github.com/vtaits/use-lazy-ref",
  "author": "Vadim Taits",
  "license": "MIT",
  "keywords": [
    "react",
    "useref",
    "callback",
    "lazy",
    "use-lazy-ref"
  ]
}
